<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".category_fruitbutton">

    <TextView
        android:id="@+id/titleOfFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/font"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:text="         과일         "
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/titleOfFruit"
        tools:layout_editor_absoluteX="0dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton17"
                    android:layout_weight="0.5"
                    android:layout_width="197dp"
                    android:layout_height="205dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/fruit_waternelon" />

                <ImageButton
                    android:id="@+id/imageButton18"
                    android:layout_weight="0.7"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_grape" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton19"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="205dp"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_apple" />

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_weight="0.7"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_pear" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton21"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="205dp"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_peach" />

                <ImageButton
                    android:id="@+id/imageButton22"
                    android:layout_weight="0.7"
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_koreanmelon" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton23"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="205dp"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_melon" />

                <ImageButton
                    android:id="@+id/imageButton24"
                    android:layout_weight="0.7"
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/fruit_orange" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>